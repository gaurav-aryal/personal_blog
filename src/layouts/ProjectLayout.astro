---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';

const { frontmatter } = Astro.props;
---

<html lang="en" class="bg-[#0B1120]">
	<head>
		<BaseHead title={frontmatter.title} description={frontmatter.description} />
	</head>

	<body class="text-gray-100 bg-gradient-to-br from-[#0B1120] via-[#132347] to-[#0B1120]">
		<Header />
		<main class="container mx-auto px-4 pt-28 pb-8 max-w-4xl">
			<article class="prose prose-invert max-w-none">
				<h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">
					{frontmatter.title}
				</h1>
				<div class="mb-8 flex justify-center bg-white/5 p-4 rounded-xl">
					<img 
						src={frontmatter.heroImage} 
						alt={frontmatter.title}
						class="w-24 h-24"
					/>
				</div>
				<div class="bg-gray-800/50 rounded-xl p-8 backdrop-blur-sm">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	.prose {
		color: #94a3b8;
	}
	.prose h1, .prose h2, .prose h3, .prose h4 {
		color: #f1f5f9;
	}
	.prose code {
		background-color: #1e293b;
		color: #e2e8f0;
		padding: 0.2em 0.4em;
		border-radius: 0.375rem;
	}
	.prose pre {
		background-color: #1e293b;
		border-radius: 0.5rem;
	}
	.prose a {
		color: #60a5fa;
	}
	.prose ul {
		list-style-type: disc;
	}
</style> 
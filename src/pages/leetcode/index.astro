---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = await getCollection('leetcode');
const sortedPosts = posts.sort((a, b) => {
  // If both posts have order, sort by order
  if (a.data.order !== undefined && b.data.order !== undefined) {
    return a.data.order - b.data.order;
  }
  // If only one has order, put the one with order first
  if (a.data.order !== undefined && b.data.order === undefined) {
    return -1;
  }
  if (a.data.order === undefined && b.data.order !== undefined) {
    return 1;
  }
  // If neither has order, sort alphabetically
  return a.data.title.localeCompare(b.data.title);
});
---

<html lang="en" class="bg-[#0B1120]">
  <head>
    <BaseHead title={`Leetcode | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="text-gray-100">
    <Header />
    <main class="container mx-auto px-4 pt-28 pb-8 max-w-4xl">
      <h1 class="text-4xl font-bold mb-8 bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">
        Leetcode Patterns & Solutions
      </h1>
      <div class="space-y-6">
        {sortedPosts.map((post) => {
          const slug = post.id?.split('/').pop()?.replace('.md','') ?? 'unknown';
          return (
            <a href={`/leetcode/${slug}`} 
               class="block p-6 bg-gray-800/50 rounded-xl hover:bg-gray-700/50 transition duration-300 border border-blue-900/20 backdrop-blur-sm">
              <h2 class="text-2xl font-bold mb-2 text-blue-400">{post.data.title}</h2>
              <p class="text-gray-400 mb-4">{post.data.description}</p>
            </a>
          );
        })}
      </div>
    </main>
    <Footer />
  </body>
</html> 
---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en" class="bg-[#0B1120]">
	<head>
		<BaseHead title={`Products | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>

	<body class="text-gray-100">
		<Header />
		<main class="container mx-auto px-4 pt-28 pb-8">
			<h1 class="text-4xl font-bold mb-12 bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text text-center">
				Products
			</h1>

			<div class="grid gap-8 max-w-4xl mx-auto">
				<!-- AI Analytics Suite -->
				<div class="bg-gray-800/50 rounded-xl p-8 backdrop-blur-sm border border-blue-900/20 hover:border-blue-500 transition duration-300">
					<h2 class="text-2xl font-bold mb-4 text-blue-400">AI Analytics Suite</h2>
					<p class="text-gray-400 mb-4">Advanced analytics platform powered by machine learning.</p>
					<ul class="list-disc list-inside text-gray-400 space-y-2">
						<li>Real-time data analysis</li>
						<li>Predictive modeling</li>
						<li>Automated reporting</li>
						<li>Custom dashboards</li>
					</ul>
				</div>

				<!-- DevOps Toolkit -->
				<div class="bg-gray-800/50 rounded-xl p-8 backdrop-blur-sm border border-blue-900/20 hover:border-blue-500 transition duration-300">
					<h2 class="text-2xl font-bold mb-4 text-blue-400">DevOps Toolkit</h2>
					<p class="text-gray-400 mb-4">Streamline your development workflow with our integrated tools.</p>
					<ul class="list-disc list-inside text-gray-400 space-y-2">
						<li>CI/CD pipelines</li>
						<li>Infrastructure as Code</li>
						<li>Monitoring solutions</li>
						<li>Automated testing</li>
					</ul>
				</div>

				<!-- Data Pipeline Framework -->
				<div class="bg-gray-800/50 rounded-xl p-8 backdrop-blur-sm border border-blue-900/20 hover:border-blue-500 transition duration-300">
					<h2 class="text-2xl font-bold mb-4 text-blue-400">Data Pipeline Framework</h2>
					<p class="text-gray-400 mb-4">Build robust data pipelines with our enterprise framework.</p>
					<ul class="list-disc list-inside text-gray-400 space-y-2">
						<li>ETL processing</li>
						<li>Data validation</li>
						<li>Error handling</li>
						<li>Scalable architecture</li>
					</ul>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html> 
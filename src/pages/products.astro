---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en" class="bg-gray-900">
	<head>
		<BaseHead title={`Products | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>

	<body class="text-gray-100">
		<Header />
		<main class="container mx-auto px-4 py-8">
			<section class="max-w-3xl mx-auto">
				<h1 class="text-4xl font-bold mb-8 bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">
					Products
				</h1>
				<div class="grid gap-8">
					<div class="p-6 bg-gray-800 rounded-xl border border-gray-700">
						<h2 class="text-2xl font-bold mb-4 text-blue-400">AI Analytics Suite</h2>
						<p class="text-gray-300">Advanced analytics platform powered by machine learning.</p>
					</div>
					<div class="p-6 bg-gray-800 rounded-xl border border-gray-700">
						<h2 class="text-2xl font-bold mb-4 text-blue-400">DevOps Toolkit</h2>
						<p class="text-gray-300">Streamline your development workflow with our integrated tools.</p>
					</div>
					<div class="p-6 bg-gray-800 rounded-xl border border-gray-700">
						<h2 class="text-2xl font-bold mb-4 text-blue-400">Data Pipeline Framework</h2>
						<p class="text-gray-300">Build robust data pipelines with our enterprise framework.</p>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html> 